%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %title TURING School of Software & Design
    = javascript_include_tag 'modernizr'
    = stylesheet_link_tag 'application'
    = javascript_include_tag '//use.typekit.net/xxm2mvw.js'
    = javascript_include_tag 'analytics'
    = javascript_include_tag '//s7.addthis.com/js/300/addthis_widget.js#pubid=novohispano'
    = javascript_include_tag 'share'
    :javascript
      try{Typekit.load();}catch(e){}

  %body{class: page_classes}

    %header.mod-header
      .layout-wrap
        %h1= link_to 'Turing School of Software & Design', 'http://turing.io'

        %nav
          %ul
            %li{class: nav_active('difference')}= link_to 'The Difference', 'http://turing.io/difference'
            %li{class: nav_active('team')}= link_to 'Our Team', 'http://turing.io/team'
            %li{class: nav_active('program')}= link_to 'Program', 'http://turing.io/program'
            %li{class: nav_active('admissions')}= link_to 'Admissions', 'http://turing.io/admissions'
            %li{class: nav_active('tuition')}= link_to 'Tuition', 'http://turing.io/tuition'
            %li{class: nav_active('contact')}= link_to 'Contact', 'http://turing.io/contact'
            %li{class: nav_active('contact')}= link_to 'Blog', '/'
    = yield

    = javascript_include_tag 'application'

